<h1>Restaurants</h1>
<ul>
<% @restaurants.each do |restaurant| %>
  <li>
    <%= link_to restaurant.name, restaurant_path(restaurant) %>
    <%= restaurant.address %> ,
    <%= restaurant.category %>
  </li>
<% end %>
</ul>
<br>
<%= link_to "Add a new restaurant", new_restaurant_path, class: "btn btn-primary"%>
